# This is an example PKGBUILD file. Use this as a start to creating your own,
# and remove these comments. For more information, see 'man PKGBUILD'.
# NOTE: Please fill out the license field for your package! If it is unknown,
# then please put 'unknown'.

# Maintainer: Fredrik Salomonsson <plattfot@gmail.com>
pkgname=rgr
pkgver=7.1.0.5856
pkgrel=1
epoch=
pkgdesc="HP Remote Graphics Software, receiver only"
arch=('x86_64')
url="http://www8.hp.com/us/en/campaigns/workstations/remote-graphics-software.html"
license=('custom')
groups=()
depends=()
makedepends=()
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
source=("RGS_Linux_64_Receiver_v7.1_Z7550-01600.tar.gz")
noextract=()
md5sums=('SKIP') #generate with 'makepkg -g'

prepare() {
    local rgr_root="${srcdir}/lin64/receiver"
    mkdir -p ${rgr_root}/src
    bsdtar -C ${rgr_root}/src -xf ${rgr_root}/rgreceiver_linux_64-${pkgver}-1.${arch}.rpm
    chmod 755 -R $rgr_root/src
}

package() {
    # install src
    cp -r $srcdir/lin64/receiver/src/* $pkgdir/
    chmod 644 -R $pkgdir/*
    chmod 755 $pkgdir/opt/hpremote/rgreceiver/rgreceiver{,.sh}
    chmod 755 $pkgdir/opt/hpremote/rgreceiver/receiverConfigApp
    chmod 755 $pkgdir/opt/hpremote/rgreceiver/receiverconfigapp.sh
    chmod 755 $pkgdir/opt/hpremote/rgreceiver/rgsmbiosreader
    # install license
    install -Dm644 $srcdir/lin64/receiver/LICENSE.txt \
            $pkgdir/usr/share/licenses/$pkgname/license.txt
}


